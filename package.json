{
  "name": "d3-dag",
  "version": "0.9.1",
  "description": "Layout algorithms for visualizing directed acylic graphs.",
  "keywords": [
    "d3",
    "d3-module",
    "layout",
    "dag",
    "infovis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erikbrinkman/d3-dag.git"
  },
  "author": {
    "name": "Erik Brinkman",
    "email": "erik.brinkman@gmail.com"
  },
  "license": "MIT",
  "module": "bundle/d3-dag.esm.min.js",
  "types": "dist/index.d.ts",
  "main": "bundle/d3-dag.cjs.min.js",
  "unpkg": "bundle/d3-dag.iife.min.js",
  "files": [
    "/bundle/*.js",
    "/dist/**/*.js",
    "/dist/**/*.d.ts"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(d3-array|internmap)/)"
    ]
  },
  "scripts": {
    "prettier": "prettier '{src,test,test-d,types}/**/*.ts' '{,.}*.{json,mjs,ts}' 'examples/*.json'",
    "fmt": "yarn prettier --write",
    "lint": "yarn prettier --check && eslint --cache {src,test,test-d,types}/**/*.ts *.mjs",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "bundle": "rm -rf bundle && node bundle.mjs",
    "test": "tsc && yarn lint && jest test/ --coverage && yarn build && tsd && yarn bundle && jest bundle.test.ts",
    "prepare": "jest --clear-cache && yarn test && yarn build && yarn bundle",
    "todo": "grep -rI --color TODO src test types",
    "doc": "typedoc"
  },
  "dependencies": {
    "d3-array": "^3.1.1",
    "fastpriorityqueue": "0.7.1",
    "javascript-lp-solver": "0.4.24",
    "quadprog": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/types": "^7.16.8",
    "@types/d3-array": "^3.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "esbuild": "^0.14.11",
    "esbuild-plugin-ignore": "^1.1.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "read-package-json": "^4.1.1",
    "tsd": "^0.19.1",
    "typedoc": "^0.22.11",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.5.4"
  }
}
