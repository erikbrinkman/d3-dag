{
  "name": "d3-dag",
  "version": "0.11.3",
  "description": "Layout algorithms for visualizing directed acylic graphs.",
  "keywords": [
    "d3",
    "d3-module",
    "layout",
    "dag",
    "infovis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/erikbrinkman/d3-dag.git"
  },
  "author": {
    "name": "Erik Brinkman",
    "email": "erik.brinkman@gmail.com"
  },
  "license": "MIT",
  "module": "bundle/d3-dag.esm.min.js",
  "types": "dist/index.d.ts",
  "main": "bundle/d3-dag.cjs.min.js",
  "unpkg": "bundle/d3-dag.iife.min.js",
  "files": [
    "/bundle/*.js",
    "/dist/**/*.js",
    "/dist/**/*.js.flow",
    "/dist/**/*.d.ts"
  ],
  "scripts": {
    "fmt:prettier": "prettier '{src,test,test-d,types}/**/*.ts' '*.{json,ts}' 'examples/*.json' bundle.mjs",
    "fmt": "yarn fmt:prettier --write",
    "lint:prettier": "yarn fmt:prettier --check",
    "lint:eslint": "eslint --cache {src,test,test-d}/**/*.ts bundle.mjs",
    "lint:doc": "pnpify typedoc --emit none",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:doc",
    "build:ts": "pnpify tsc -p tsconfig.build.json",
    "build:flow": "node flow.mjs --cache",
    "build:bundle": "rm -rf bundle && node bundle.mjs",
    "build": "yarn build:ts && yarn build:flow && yarn build:bundle",
    "test:jest": "jest test/",
    "test:coverage": "yarn test:jest --coverage",
    "test:tsd": "yarn build:ts && pnpify run tsd",
    "test:bundle": "yarn build:bundle && jest bundle.test.ts",
    "test": "pnpify tsc && yarn lint && yarn test:coverage && yarn test:tsd && yarn test:bundle",
    "prepack": "jest --clear-cache && rm -rf dist bundle && yarn test && yarn build",
    "doc": "pnpify typedoc"
  },
  "dependencies": {
    "d3-array": "^3.1.6",
    "fastpriorityqueue": "0.7.2",
    "javascript-lp-solver": "0.4.24",
    "quadprog": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/types": "^7.18.4",
    "@types/d3-array": "^3.0.3",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.8",
    "@yarnpkg/pnpify": "^4.0.0-rc.8",
    "babel-jest": "^28.1.1",
    "chalk": "5.0.1",
    "esbuild": "^0.14.43",
    "esbuild-plugin-ignore": "^1.1.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-tsdoc": "^0.2.16",
    "flowgen": "^1.20.0",
    "glob": "^8.0.3",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "read-package-json": "^5.0.1",
    "tsd": "^0.20.0",
    "typedoc": "^0.22.17",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.7.3"
  },
  "resolutions": {
    "minimist": "1.2.6"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(d3-array|internmap)/)"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "spellcheck",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "tsdoc/syntax": "error",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_+$"
        }
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ],
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "Awan",
            "Azura",
            "Emden",
            "Flowgen",
            "Flowtype",
            "Gansner",
            "Noam",
            "accessor",
            "accessors",
            "aggregator",
            "aggregators",
            "bidirectionalizes",
            "bigrams",
            "bottomup",
            "coffman",
            "coffmangraham",
            "contravariant",
            "coord",
            "covariant",
            "curviness",
            "customizable",
            "decrement",
            "decross",
            "decrossed",
            "decrossing",
            "decrossings",
            "decycle",
            "dedup",
            "esnext",
            "graphvis",
            "idescendants",
            "iife",
            "ilinks",
            "indeg",
            "initializers",
            "inits",
            "invariants",
            "iroots",
            "isplit",
            "iter",
            "javascript",
            "lagrangian",
            "laidout",
            "longestpath",
            "minimizers",
            "multidag",
            "multimap",
            "nchild",
            "nchildren",
            "negatable",
            "outdeg",
            "parametrize",
            "quadprog",
            "radix",
            "replacer",
            "rescale",
            "rescaled",
            "resized",
            "suboptimal",
            "sugi",
            "sugify",
            "sugiyama",
            "tabularesque",
            "topdown",
            "transpiled",
            "transpiling",
            "twolayer",
            "unranked",
            "unsugify",
            "vals",
            "vert",
            "verticality",
            "zherebko"
          ],
          "minLength": 4
        }
      ]
    }
  },
  "packageManager": "yarn@3.2.0"
}
