{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "incremental": true
  },
  "include": ["src", "test"]
}
