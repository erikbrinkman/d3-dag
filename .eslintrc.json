{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "jest", "spellcheck"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^_+$" }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ],
    "no-warning-comments": [
      "error",
      { "terms": ["fixme"], "location": "anywhere" }
    ],
    "spellcheck/spell-checker": [
      "error",
      {
        "identifiers": false,
        "skipWords": [
          "Awan",
          "Azura",
          "Emden",
          "Gansner",
          "Noam",
          "accessor",
          "accessors",
          "agg",
          "aggregator",
          "aggregators",
          "al",
          "bidirectionalizes",
          "bigrams",
          "bottomup",
          "cjs",
          "coffman",
          "coffmangraham",
          "contravariant",
          "coord",
          "covariant",
          "curviness",
          "customizable",
          "decrement",
          "decross",
          "decrossed",
          "decrossing",
          "decrossings",
          "decycle",
          "dedup",
          "dee",
          "dfs",
          "esm",
          "esnext",
          "et",
          "idescendants",
          "iife",
          "ilinks",
          "indeg",
          "invariants",
          "iroots",
          "isplit",
          "iter",
          "javascript",
          "longestpath",
          "lp",
          "minimizers",
          "multidag",
          "multimap",
          "nchild",
          "nchildren",
          "negatable",
          "num",
          "outdeg",
          "parametrize",
          "quadprog",
          "radix",
          "replacer",
          "rescale",
          "rescaled",
          "resized",
          "suboptimal",
          "sugi",
          "sugify",
          "sugiyama",
          "tabularesque",
          "topdown",
          "twolayer",
          "unranked",
          "unsugify",
          "vert",
          "verticality",
          "vm",
          "ys",
          "zherebko"
        ]
      }
    ]
  }
}
